program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var numero1: Integer;
var numero2: Integer;
var soma: Integer;

begin
  try
    Write('Informe um número: ');
    ReadLn(numero1);
    Write('Informe um segundo número: ');
    ReadLn(numero2);
    end;
    soma = numero1 + numero2;
    try
    WriteLn('A soma dos números é: ' , soma);
    end;
    ReadLn;
  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
