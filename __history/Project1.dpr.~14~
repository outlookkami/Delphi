program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var idade: Integer;

begin
  try
     Write('Quantos anos você tem? ');
     try
      ReadLn(idade);
     except
      Write('Informe um número inteiro.');
      ReadLn;
      Exit;
     end;

     if  idade >= 18 then begin
      Write('Você atingiu a maioridade.');
     end else begin
      Write('Você não atingiu a maioridade.');
     end;
     ReadLn;

  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
