program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var numero: Integer;

begin
  try
    WriteLn('Informe um número');
    ReadLn(numero);
    if numero mod2=0 then begin
      Write('O número é par');
    end else begin
      WriteLn('O número informado é ímpar');
    end;


  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
